<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE93D8"
    tools:context=".PsikolojikTestiSoru1" >

    <TextView
        android:id="@+id/textHosGeldin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:text="Psikoloji testine hoş geldin"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textPsikolojiSoru1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHosGeldin2"
        android:layout_marginTop="60dp"
        android:text="Cinsiyetinizi seçiniz"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/textPsikolojiSoru1"
        android:layout_marginTop="64dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageErkek2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/psikolojierkek" />

        <ImageView
        android:id="@+id/imageKadin2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/psikolojikadin" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonErkek2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="ERKEK"
        android:textSize="18sp"
        android:backgroundTint="#FFFF00"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"/>

    <Button
        android:id="@+id/buttonKadin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="KADIN"
        android:textSize="18sp"
        android:backgroundTint="#FFFF00"
        android:textColor="@color/black"
        android:layout_marginStart="250dp"
        />

    <TextView
        android:id="@+id/textPsikolojiMesaj1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHosGeldin2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/design_default_color_error"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonPsikolojiIkinciSoru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:text="Sonraki Soru"

            />
    </LinearLayout>

</RelativeLayout>

