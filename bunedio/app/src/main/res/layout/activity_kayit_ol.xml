<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/eiffel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KayitOlActivity">

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email adresinizi giriniz"
        android:drawableLeft="@drawable/email_svgrepo_com"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/editTextKullaniciAdi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/user_svgrepo_com"
        android:drawablePadding="10dp"
        android:hint="Kullanıcı adınızı giriniz"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/editTextEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextSifre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password_svgrepo_com"
        android:drawablePadding="10dp"
        android:hint="Şifrenizi giriniz"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/editTextKullaniciAdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextİsim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/name_badge_svgrepo_com"
        android:drawablePadding="10dp"
        android:hint="İsim Soyidim"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/editTextSifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/kayitOlButton"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/teal_200"
        android:text="Kayıt Ol"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/editTextİsim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp" />
</androidx.constraintlayout.widget.ConstraintLayout>