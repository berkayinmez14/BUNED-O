<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/anaekrangiris"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EmailTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı adı veya Email giriniz"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email_svgrepo_com"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:padding="10dp"/>


   <EditText
       android:id="@+id/SifreTV"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:hint="Şifrenizi girin"
       android:inputType="textPassword"
       android:drawableLeft="@drawable/password_svgrepo_com"
       android:drawablePadding="10dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/EmailTV"
       android:layout_marginTop="10dp"
       android:padding="10dp"/>

    <Button
        android:id="@+id/buttonGiris"
        android:layout_width="155dp"
        android:layout_height="66dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="@color/teal_200"
        android:text="Giriş Yap"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SifreTV" />

    <Button
        android:id="@+id/buttonKayitOl"
        android:layout_width="155dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="@color/teal_200"
        android:text="Kayıt Ol"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonGiris" />
</androidx.constraintlayout.widget.ConstraintLayout>