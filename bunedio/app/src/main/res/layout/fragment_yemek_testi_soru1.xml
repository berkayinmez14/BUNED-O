<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff7518"
    tools:context=".YemekTestiSoru1" >

    <TextView
        android:id="@+id/textYemekSoru1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malum soruyla başlayalım.Hangi menemeni tercih edersin"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textYemekMesaj1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textYemekSoru1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/teal_200" />

    <ImageView
        android:id="@+id/imageViewMenemen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menemenfoti"
        android:layout_below="@id/textYemekMesaj1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/buttonSoganli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOĞANLI"
        android:layout_below="@id/imageViewMenemen"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/buttonSogansiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOĞANSIZ"
        android:layout_below="@id/imageViewMenemen"
        android:textSize="20sp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonYemekIkinciSoru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginStart="130dp"
            android:text="Sonraki Soru"

            />
    </LinearLayout>

</RelativeLayout>

